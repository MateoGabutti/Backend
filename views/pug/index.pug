html 
    head 
        title="PugForm"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body
        div(class="container row justify-content-center")
            div(class="container row justify-content-center")
                form(action="/productos" method="POST" enctype="multipart/form-data" class="p-2 col-md-5")
                    legend(class="form-legend") Datos del producto
                    label(for="nombre") Nombre 
                    input(type="text" name="title" class="form-control" id="nombre") 
                    label(for="price") Precio
                    input(type="number" name="price" class="form-control" id="price") 
                    label(for="thumbnail") Foto URL
                    input(type="text" name="thumbnail" class="form-control" id="thumbnail")
                    button(type="submit" class="btn btn-primary mt-2") Submit
            a(href="http://localhost:3001/productos" class="btn btn-primary col-5") Ir a productos 